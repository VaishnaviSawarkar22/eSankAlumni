
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Pages/AlumniReg.js"></script>


<h2 style="text-align:center">Alumni Registration</h2>

<div class="row gy-4 mt-4">
    <div class="col-lg-2">

    </div>

    <div class="col-lg-8">

        <div class="row">
            <div class="col-md-6 form-group">

                AlumniName <br>
                <input type="text" id="txtAlumniName" class="form-control p-2" placeholder="Your Name" required /><br>
            </div>
            <div class="col-md-6 form-group mt-3 mt-md-0">
                eSankalpId<br>
                <input type="text" id="txte SankalpId" class="form-control p-2" placeholder="Id" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                PassoutYear<br>
                <input type="text" id="txtPassoutYr" class="form-control p-2" placeholder="Your PassYear" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                DOB<br>
                <input type="date" id="txtDOB" class="form-control p-2" placeholder="Your DOB" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                TotalExperience<br>
                <input type="text" id="txtTotalExp" class="form-control p-2" placeholder="Your TotalExp" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                CurrentCompany<br>
                <input type="text" id="txtCurrentCompany" class="form-control p-2" placeholder="Your CurrentCompany" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                CTC<br>
                <input type="text" id="txtCTC" class="form-control p-2" placeholder="Your CTC" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                Photo<br>
                <input id="File1" type="file" class="form-control p-2" placeholder="Your Photo" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                City<br><select id="ddlCity" class="form-control p-2">
                    <option>Nagpur</option>
                    <option>Amravati</option>
                    <option>Pune</option>
                </select>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                Address<br>
                <input type="text" id="txtAddress" class="form-control p-2" placeholder="Your Address" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                CollegeName<br>
                <input type="text" id="txCollegeName" class="form-control p-2" placeholder="Your ClgName" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                Education<br>
                <input type="text" id="txtEducation" class="form-control p-2" placeholder="Your Education" required /><br>
            </div>

            <div class="col-md-6 form-group mt-3 mt-md-0">
                IsActive<br><select id="IsActive" class="form-control p-2">
                    <option>Yes</option>
                    <option>No</option>
                            </select>
                <br>
            </div>
           
            <center><input id="BtnSave" type="button" class="btn btn-success" value="SAVE" onclick="SaveAlumniReg()" /></center>
            <div class="col-lg-2">
            </div>
            <br>
            <br>
            
        </div>
    </div>
</div>